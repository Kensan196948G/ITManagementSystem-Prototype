    "react-router-dom": "^6.16.0",
    "react-query": "^3.39.3",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "typescript": "^5.2.2",
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "axios": "^1.5.0",
    "date-fns": "^2.30.0",
    "recharts": "^2.8.0",
    "react-hot-toast": "^2.4.1",
    "react-hook-form": "^7.46.1",
    "zod": "^3.22.4",
    "@hookform/resolvers": "^3.3.1",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "socket.io-client": "^4.7.2",
