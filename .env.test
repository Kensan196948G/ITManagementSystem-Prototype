# テスト環境専用設定

NODE_ENV=test
APP_DEBUG=false
APP_LOG_LEVEL=error

# テスト用データベース設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=itsm_test
DB_USERNAME=postgres
DB_PASSWORD=test_password
DB_SSL=false

# テスト用接続プール設定（最小限）
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=5000
DB_POOL_ACQUIRE_TIMEOUT=10000

# テスト用サーバー設定
SERVER_HOST=localhost
SERVER_PORT=0
SERVER_HTTPS_ENABLED=false
SERVER_CORS_ORIGIN=*
SERVER_REQUEST_TIMEOUT=10000

# テスト用セキュリティ設定（緩和）
JWT_SECRET=test-jwt-secret-key
SESSION_SECRET=test-session-secret-key
CSRF_SECRET=test-csrf-secret-key
BCRYPT_ROUNDS=4

# テスト用ログ設定（最小限）
LOG_CONSOLE_ENABLED=false
LOG_FILE_ENABLED=false
LOG_LEVEL=error

# テスト用メール設定（モック）
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_SECURE=false
SMTP_FROM="Test <test@example.com>"

# テスト用Redis設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# テスト用ストレージ設定（ローカル）
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./test-uploads

# テスト用機能フラグ
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_AUDIT_LOG=false
FEATURE_NOTIFICATIONS=false
FEATURE_ANALYTICS=false
FEATURE_AUTO_BACKUP=false

# テスト専用設定
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=itsm_test

# テスト用キャッシュ設定
CACHE_TYPE=memory
CACHE_TTL=60
CACHE_MAX_SIZE=10

# テスト用セッション設定
SESSION_STORE=memory
SESSION_MAX_AGE=3600000

# テスト用アップロード設定
UPLOAD_MAX_SIZE=1048576
UPLOAD_DESTINATION=./test-uploads
UPLOAD_TEMP_DIR=./test-temp

# テスト用監視設定（無効）
METRICS_ENABLED=false
HEALTH_CHECK_ENABLED=false

# テスト用レート制限設定（緩和）
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000