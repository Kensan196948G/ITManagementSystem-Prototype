# ステージング環境設定ファイル
REACT_APP_API_BASE_URL=https://api.staging.it-management.mirai-const.co.jp
REACT_APP_MS_CLIENT_ID=ステージング用クライアントID
REACT_APP_MS_AUTHORITY=https://login.microsoftonline.com/テナントID
REACT_APP_REDIRECT_URI=https://staging.it-management.mirai-const.co.jp/auth/callback

# バックエンド設定
API_PORT=5000
DATABASE_CONNECTION_STRING=ステージング用DB接続文字列
LOG_LEVEL=debug
ENVIRONMENT=staging

# モニタリング設定
ENABLE_DETAILED_LOGGING=true
PROMETHEUS_METRICS=true
PERFORMANCE_TRACING=true

# セキュリティ設定 (ステージング環境のため一部制限を緩和)
SESSION_TIMEOUT=60
MAX_LOGIN_ATTEMPTS=10
PASSWORD_EXPIRY_DAYS=90