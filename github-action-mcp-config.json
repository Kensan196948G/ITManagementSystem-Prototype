{
  "github_action_mcp": {
    "enabled": true,
    "version": "1.0.0",
    "features": {
      "auto_commit": {
        "enabled": true,
        "message_template": "Auto-commit: {description}",
        "sign_commits": false
      },
      "auto_push": {
        "enabled": true,
        "force_push": false,
        "protected_branches": ["main", "master"]
      },
      "auto_pull": {
        "enabled": true,
        "rebase": true,
        "auto_merge_conflicts": false
      },
      "error_repair_loop": {
        "enabled": true,
        "max_iterations": 5,
        "strategies": [
          "lint_fix",
          "test_repair",
          "dependency_update",
          "security_patch",
          "type_fix"
        ],
        "auto_create_pr": true
      },
      "ci_cd_integration": {
        "enabled": true,
        "workflows": [
          "auto-repair.yml",
          "ci.yml",
          "security.yml"
        ],
        "trigger_on": ["push", "pull_request", "schedule"],
        "auto_retry_failed_jobs": true
      }
    },
    "monitoring": {
      "track_success_rate": true,
      "alert_on_failure": true,
      "metrics_dashboard": true,
      "log_level": "INFO"
    },
    "security": {
      "scan_dependencies": true,
      "auto_update_vulnerable": true,
      "code_scanning": true,
      "secret_scanning": true
    },
    "integrations": {
      "claude_flow": true,
      "self_healing": true,
      "serena_mcp": true,
      "context7": true
    }
  }
}